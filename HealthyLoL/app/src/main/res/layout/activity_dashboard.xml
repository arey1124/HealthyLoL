<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#d13d4d"
    tools:context="com.at.healthylol.Dashboard">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profpic"
            android:text="Anirudh Trigunayat"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:padding="20dp"/>
        <TextView
            android:id="@+id/age"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18years"
            android:layout_toRightOf="@+id/profpic"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/sex"
            android:layout_below="@+id/age"
            android:layout_toRightOf="@id/profpic"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"

            android:textColor="#fff"
            android:text="Male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/randomquotes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/quotes"
            android:text="we care for you !"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonselectrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/randomquotes"
        android:layout_alignParentStart="true"
        android:paddingBottom="40dp">

        <View
            android:id="@+id/viewdiv"
            android:layout_width="1dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"></View>

        <RelativeLayout
            android:id="@+id/contactdoc"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:background="#fad2e0"
            android:layout_toLeftOf="@+id/viewdiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dash_cartimg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/contact"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@id/dash_cartimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Contact Doctor"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/diary"
            android:paddingTop="10dp"
            android:background="#fad2e0"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/viewdiv"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/diary"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Diary"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/report"
            android:paddingTop="10dp"
            android:background="#fad2e0"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/viewdiv"
            android:layout_below="@+id/contactdoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/report"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Generate Report"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/logout"
            android:paddingTop="10dp"
            android:background="#fad2e0"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/viewdiv"
            android:layout_below="@+id/diary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logout"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Logout"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
